.foot_menu {
    height: 36px;
    padding-left: 8px;
    background-color: #f4f4f4;
    line-height: 36px;
    font-size: 14px;
    border-bottom: 1px solid #ccc;
    a {
        display: inline;
    }
}


/*底部 部分*/

.footerApp {
    padding-top: 25px;
    background-color: #f2f2f2;
    .foot_top {
        background: #efefef;
        border-top: 1px solid #c4c4c4;
        border-bottom: 1px solid #c4c4c4;
        height: 34px;
        line-height: 34px;
        a {
            width: 30%;
            float: left;
            text-align: center;
            font-size: 14px;
            border-right: 1px solid #c4c4c4;
            img {
                width: 15px;
                height: 15px;
                border: none;
                display: inline-block;
                vertical-align: middle;
                margin-top: -5px;
                margin-right: 2px;
            }
        }
        a:last-child {
            width: 40%;
            border-right: none;
        }
    }
    .footer {
        font-size: 12px;
        color: #666;
        padding: 15px 0;
        p {
            text-align: center;
            a {
                display: inline;
            }
            a:first-child {
                color: red;
            }
            a:last-child {
                color: #000;
            }
        }
    }
}

// 固定图片
.fixImg {
    a {
        width: 60px;
        height: 68px;
        position: fixed;
        bottom: 30px;
        right: 0px;
        img {
            width: 60px;
            height: 68px;
        }
    }
}

.cu-list {
    height: 461px; // z-index: -10000;
    overflow: hidden;
}