@import "base.less";
.head {
    background-color: #ff841d;
    width: 100%;
    height: 44px;
    position: relative;
    .back {
        height: 100%;
        position: absolute;
        left: 10px;
        top: 0px;
        width: 100%;
        a {
            display: block;
            width: 50px;
            height: 44px;
            font-size: 18px;
            line-height: 44px;
            color: white;
            text-decoration: none;
        }
    }
    h1 {
        font-size: 20px;
        color: white;
        line-height: 44px;
        text-align: center;
        margin: 0px;
    }
    .home {
        height: 100%;
        width: 50px;
        position: absolute;
        right: 10px;
        top: 0px;
        padding: 7px 10px;
        overflow: hidden;
        a {
            display: block;
            text-decoration: none;
            width: 50px;
            height: 44px;
            background: url("../images/header_app.png") no-repeat;
            background-size: 32px 32px;
        }
    }
}


