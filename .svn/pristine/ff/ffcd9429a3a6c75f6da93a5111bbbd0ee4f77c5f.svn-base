// 第几页
var myPageNum = 1;
// 总页数
var totalPage;
//  分页数
var num = 0;
// 点击下一页
document.querySelector('#btnDown').addEventListener("touchend", function () {

  if ($(this).hasClass('disabled')) {
    alert('别点了,疼~~~~~~~');
    return;
  }
  myPageNum++;
  num++;

  // 刷新页面
  getData()
});
// 点击上一页
document.querySelector('#btnUp').addEventListener("touchend", function () {

  if ($(this).hasClass('disabled')) {
    alert('别点了,疼~~~~~~~');
    return;
  }
  myPageNum--;
  num--
  // 刷新页面
  getData()
});

$('#se').change(function () {
  myPageNum = $(this).val();
  num=myPageNum-1
  console.log(myPageNum)
  getData();

})
var nnn = $('#se').val()
console.log(nnn)
// 获取数据
getData()
