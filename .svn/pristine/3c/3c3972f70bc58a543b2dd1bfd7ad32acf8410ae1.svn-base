html,
body {
    position: relative;
    height: 100%;
}

body {
    background: #fff;
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
    font-size: 14px;
    color: #000;
    margin: 0;
    padding: 0;
}

.swiper-container {
    opacity: 0;
    width: 200px;
    height: 160px;
    position: absolute;
    left: 0;
    top: 50%;
    margin-left: -150px;
    margin-top: -150px;
    .swiper-button-prev{
        left: -50%;
    }
    .swiper-button-next{
        right: -50%;
    }
}

.swiper-slide {
    background-position: center;
    background-size: cover;
}

* {
    margin: 0;
    padding: 0;
}

a {
    text-decoration: none;
}

ul {
    list-style: none;
}

.clearfix::after {
    display: block;
    content: "";
    height: 0;
    clear: both;
}

header {
    z-index: 1;
    width: 100%;
    height: 45px;
    border-radius: 3px;
    background-color: #f4483e;
    position: fixed;
    top: 0;
    left: 0;
}

header .skip {
    height: 45px;
    width: 30px;
    display: block;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 7px;
}

header p {
    font-size: 21px;
    color: white;
    text-align: center;
    line-height: 45px;
}

header a {
    display: block;
    position: absolute;
    top: 0;
    right: 13px;
}

header a img {
    margin-top: 3px;
    width: 35px;
    height: 35px;
}

