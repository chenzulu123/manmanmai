* {
    box-sizing: border-box;
}

.header {
    width: 100%;
    height: (44rem/20);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
    background-color: #ff8b00;
    line-height: (44rem/20);
    color: #fff;
    display: flex;
    .left {
        width: (44rem/20);
        height: (44rem/20);
        margin-left: (8rem/20);
        a {
            font-size: (20rem/20);
            color: #fff;
        }
    }
    h1 {
        flex: 1;
        text-align: center;
        font-size: (20rem/20);
    }
    .right {
        width: (44rem/20);
        height: (44rem/20);
        background: url(../images/header_app.png) no-repeat left center;
        background-size: cover;
        margin-right: (8rem/20);
    }
}
.kong {
        width: 100%;
        height: (81rem/20);
//      margin-top: (44rem/20);
//      display: none;
    }
.content-box {
//  margin-top: (44rem/20);
    width: 100%;
    position: fixed;
    left: 0;
//  top: 0;
    transition: all 0.6s;
            top: (44rem/20);
    
    .con-one {
        width: 100%;
        height: (37rem/20);
        background-color: #fff;
        z-index: 2;
        display: flex;
        
        .screen {
            flex: 1;
            height: (37rem/20);
            display: flex;
            overflow: hidden;
            li {
                flex: 1;
                justify-content: space-around;
                height: 100%;
                float: left;
                text-align: center;
                line-height: (37rem/20);
                font-size: (16rem/20);
//              a {
//                  font-size: (16rem/20);
//              }
            }
        }
        .search {
            width: (47rem/20);
            height: (37rem/20);
            text-align: center;
            line-height: (37rem/20);
            border-left: 1px solid #000;
            i {
                font-size: (20rem/20);
            }
        }
    }
    .con-one-hide {
        position: absolute;
        left: 0;
        top: (37rem/20);
        width: 100%;
        background-color: #fff;
        border-top: 1px solid #ccc;
        .on {
            background: url(../images/4.png) no-repeat right center;
        }
        .show {
            display: block;
        }
        ul {
            display: none;
            width: 100%;
            li {
                width: 100%;
                line-height: (40rem/20);
                height: (40rem/20);
                border-bottom: 1px solid #ccc;
                a {
                    width: 100%;
                    display: inline-block;
                    padding: 0 (10rem/20);
                }
            }
        }
    }
}

.box {
    width: 100%;
    background-color: #f1f1f1;
    padding: 6px 0px;
    ul {
        width: 98%;
        margin: 0 auto;
        li {
            float: left;
            width: 50%;
            a {
                display: block;
                margin: 4px;
                background-color: #ffffff;
                .pic {
                    width: 100%;
                    height: auto;
                    text-align: center;
                    overflow: hidden;
                    img {
                        width: (147rem/20);
                        height: (147rem/20);
                    }
                }
                .title {
                    color: #333333;
                    word-break: break-all;
                    padding: 0 6px;
                    height: 14px;
                    overflow: hidden;
                    font-size: 12px;
                    margin-top: 10px;
                    line-height: 14px;
                    font-weight: normal;
                    text-align: left;
                    margin-top: 6px;
                }
                .other {
                    padding: 6px;
                    .price {
                        float: left;
                        color: #f8601d;
                        font-size: 20px;
                    }
                    .btn {
                        float: right;
                        font-size: 14px;
                        color: #FFFFFF;
                        border-radius: 3px;
                        background-color: #ff9501;
                        padding: 4px;
                        text-decoration: none;
                        //                      display: none;
                    }
                }
            }
        }
    }
}