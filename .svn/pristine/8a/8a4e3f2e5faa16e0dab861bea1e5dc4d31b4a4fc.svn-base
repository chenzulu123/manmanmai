.brief {
  background-color: #f2f2f2;
  padding: .05rem .05rem .25rem .05rem;
}
.brief .brief_in {
  border: 1px solid #ccc;
  border-radius: .05rem;
  overflow: hidden;
  background-color: #f9f9f9;
}
.brief .brief_in .fl_t .title {
  height: 40px;
  background-color: #ebebeb;
  font-size: 16px;
  font-weight: bolder;
  line-height: 40px;
  padding-left: 16px;
  border-bottom: 1px solid #ccc;
}
.brief .brief_in .fl_t .title .iconfont {
  color: #888888;
  margin-right: .16rem;
  transition: all 0.2s;
}
.brief .brief_in .fl_t .title .iconfont.rotate {
  transform: rotate(180deg);
}
.brief .brief_in .fl_t .content {
  display: none;
}
.brief .brief_in .fl_t .content > ul {
  width: 100%;
  height: 100%;
  margin-right: -1px;
}
.brief .brief_in .fl_t .content > ul > li {
  background-color: #f9f9f9;
  text-align: center;
  line-height: 40px;
  color: #333333;
  width: 33.33%;
  float: left;
  height: 40px;
  font-size: 14px;
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
  border-collapse: collapse;
}
.brief .brief_in .fl_t .content > ul > li a {
  width: 100%;
  height: 100%;
  display: block;
}
