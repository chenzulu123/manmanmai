// 比价模块开始
.brief {
    background-color: #f2f2f2;
    padding: .05rem .05rem .25rem .05rem;
    .brief_in {
        border: 1px solid #ccc;
        border-radius: .05rem;
        overflow: hidden;
        background-color: #f9f9f9;
        .fl_t {
            .title {
                height: 40px;
                background-color: #ebebeb;
                font-size: 16px;
                font-weight: bolder;
                line-height: 40px;
                padding-left: 16px;
                border-bottom: 1px solid #ccc;
                .iconfont{
                    color: #888888;
                    margin-right: .16rem;
                    transition: all 0.2s;
                }
                .iconfont.rotate{
                    transform: rotate(180deg);
                }
            }
            .content{
                display: none;
                >ul{
                    width: 100%;
                    height: 100%;
                    >li{
                        a{
                            width: 100%;
                            height: 100%;
                            display: block;
                        }
                        background-color: #f9f9f9;
                        text-align: center;
                        line-height: 40px;
                        color: #333333;
                        width: 33.33%;
                        float: left;
                        height: 40px;
                        font-size: 14px;
                        border-right: 1px solid #ccc;
                        border-bottom: 1px solid #ccc;
                        box-sizing: border-box;
                        border-collapse: collapse;
                    }
                    margin-right: -1px;
                }
            }
        }
    }
}