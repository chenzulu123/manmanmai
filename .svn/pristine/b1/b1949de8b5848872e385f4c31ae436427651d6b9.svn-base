<!--定义模板-->
<script type="text/html" id="template">
    {{each result}}
    <li class='item' data-id='{{$value.productId}}'>
         <i class='one'></i> 
         <i class='two'></i> 
         <i class='three'></i> 
         <i class='four'></i> 
        <a href="#" class="clearfix" onClick="delayURL('./haitao_info.html')">
            <div class="pic">
                {{@$value.productImgSm}}
            </div>
            <div class="info">
                <div class="title">
                    {{$value.productName}}
                    <span>{{$value.productPinkage}}</span>
                </div>
                <div class="other clearfix">
                    <span class="mall fl">{{$value.productFrom}}</span>
                    <span class="comment fr">
                         <!-- <i class="iconfont icon-xiaoxi"></i>{{$value.productComCount.charAt(1)}}  -->
                         <i class="iconfont icon-xiaoxi"></i>{{$value.productComCount.slice($value.productComCount.indexOf("有")+1,$value.productComCount.indexOf('人'))}} 
                        
                    </span>
                </div>
            </div>
        </a>
    </li>
    {{/each result}}
</script>
<!--引入zepto文件包-->
<script src="./lib/zepto/zepto.js"></script>
<!--点击事件tap-->
<script src="./lib/zepto/event.js"></script>
<script src="./lib/zepto/touch.js"></script>
<!--ajax请求-->
<script src="./lib/zepto/ajax.js"></script>
<!--<script src="./lib/zepto/fx.js"></script>-->
<script src="./lib/js/template-web.js"></script>
<!--引入iscroll文件-->
<script src="./lib/js/iscroll.js"></script>
<script src="./js/itcastEvent.js"></script>
<script>
    //加载默认页面
    load(1);

    function load(id, dire) {
        // 根据方向执行动画
        if (dire == 'right') {
            $('.cu-list').css({
                'transition': 'none',
                'transform': 'translateX(100%)'
            });
        } else if (dire == 'left') {

            $('.cu-list').css({
                'transition': 'none',
                'transform': 'translateX(-100%)'
            });
        }

        $.ajax({
            url: 'http://139.199.192.48:9090/api/getmoneyctrl',
            type: 'get',
            data: {
                pageid: id
            },
            success: function (data) {
                $(".items").html(template("template", data));

                $('.cu-list').css({
                    'transition': 'all .3s',
                    'transform': 'translateX(0)'
                });
                console.log(data);
                // iScroll作用于滚动区域的外层。
                var iscroll = new IScroll(".cu-list");
            }
        });
    }
    //翻页功能 
    var page = 1;
    $('.next').tap(function () {
        //到最后一页不能翻页
        if (page >= 15) {
            return;
        }
        page++;
        pageTurn('right');

    })
    $('.prev').tap(function () {
        //到第一页不能翻页了
        if (page <= 1) {
            return;
        }
        page--;
        pageTurn('left');

    })
    //点击下拉框 改变页面

    $('#selectPage').change(function () {
        var selectPage = +$('#selectPage').val();
        if (page < selectPage) {
            page = selectPage;
            load(page, 'right');
        } else if (page > selectPage) {
            page=selectPage;
            load(page, 'left');
        }
        // console.log(page);
        // console.log(typeof page);
    })
    //点击 返回顶部 
    $('.backTop').tap(function () {
        window.scrollTo(0, 0);
    });
    //点击单个商品 获取获取对应的id
    $('.items').on('tap', 'li', function () {
        var liId = this.dataset['id'];
        localStorage.setItem('id', liId);
        localStorage.setItem('pageNum', page);

    })


    // 翻页
    function pageTurn(dire) {
        load(page, dire);
        $("option").eq(page - 1).prop('selected', 'true').siblings().removeAttr('selected');
    }
    itcast(document.querySelector('.items')).swipe(function (desc) {
        switch (desc) {
            case 'left':
                $('.next').trigger('tap');
                break;
            case 'right':
                $('.prev').trigger('tap');
                break;
        }
    });

    // 延迟a链接跳转
    function delayURL(url) {
        setTimeout("top.location.href = '" + url + "'", 500);
    }
</script>