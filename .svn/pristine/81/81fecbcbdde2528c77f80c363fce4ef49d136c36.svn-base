@import 'media.less';
@import 'base.less';
/*头部开始*/
.head {
    width: 100%;
    height: 0.44rem;
    color: #fff;
    background: #ff841d;
    .back {
        float: left;
        margin-left: 0.1rem;
        width: 0.5rem;
        height: 0.44rem;
        line-height: 0.44rem;
        a{
            font-size: 0.3rem;
        }
    }
    span {
        float: left; 
        width: 5.2rem;
        height: 0.44rem;
        font-size: 0.2rem;
        font-weight: normal;
        text-align: center;
        line-height: 0.44rem;
        margin: 0 auto;
    }
    .home {
        float: right;
        margin-right: 0.1rem;
        width: 0.5rem;
        height: 0.5rem;
        img{
            display: block;
            width: 0.4rem;
            height: 0.4rem;
            margin: 0.02rem auto;
        }
    }
}
/*头部结束*/
/*内容开始*/
.container {
    .cu_ontent {
        padding: 0.04rem 0.1rem;
        h3 {
            font-size: 0.18rem;
            margin: 0.1rem auto 0.05rem auto;
            text-align: left;
            color: #5a5a5a;
        }
        h4 {
            font-size: 0.15rem;
            color: #ff6c00;
            font-weight: bold;
        }
        .info {
            margin: 0.12rem auto;
            color: #999999;
            font-size: 0.12rem;
            line-height: 0.24rem;
            .mall {
                margin: 0 0.04rem;
            }
            .addtime {
                margin-right: 0.04rem;
            }
        }
        .content {

            .conn {
                width:5rem;
                float: left;
                font-size: 0.16rem;
                line-height: 0.24rem;
                color: #606060;
                padding-bottom: 0.2rem;
                p {
                    margin: 0.06rem auto;
                }
                a {
                    color: #4682c5;
                    display: inline;
                }
            }
            .picwrap {
                width: 1rem;
                height: 1rem;
                float: right;
                margin: 0.12rem auto auto 0.1rem;
                img {
                    width: 1rem;
                    height: 1rem;
                }
            }
            
        }
        .golink {
            width: 100%;
            a {
                // width: 100%;
                display: block;
                height: 0.4rem;
                line-height: 0.4rem;
                margin: 0.2rem 0.1rem;
                background: #FF9000;
                text-align: center;
                color: #fff;
                font-size: 0.14rem;
                border-radius: 0.04rem;
            }
        }
    }
    .comment {
        border-top: 1px solid #e0e0e0;
        .cu-content-pl {
            // font-size: 0.14rem;  
            .tit {
                padding: 0.06rem 0.08rem;
                font-size: 0.16rem;
            }
            .reply {
                padding: 0.06rem 0.08rem;
                .form {
                    position: relative;
                    border: 2px solid #ECEAE8;
                    border-radius: 2px;
                    padding: 4px 0 0 4px;
                    textarea {
                        width: 100%;
                        height: 0.68rem;
                        resize: none;
                        outline: none;
                        border: none;
                        overflow-x: hidden;
                        overflow-y: auto;
                        line-height: 0.22rem;
                        color: #666;
                    }
                    .ctrl {
                        height: 0.36rem;
                        background: #fbfbfb;
                        border-top: 1px solid #f2f2f2;
                        margin-left: -4px;
                        input {
                            width: 1rem;
                            height: 0.39rem;
                            position: absolute;
                            right: -1px;
                            bottom: -2px;
                            color: #fff;
                            outline: none;
                            font-size: 0.16rem;
                            background: #ff841d;
                        }
                    }
                }
            }
            .list {
                ul {
                    list-style: none;
                    li {
                        width: 6.2rem;
                        padding: 0.18rem 0.1rem;
                        border-bottom: 1px solid #e0e0e0;
                        .userimg {
                            float: left;
                            width: 0.4rem;
                            height: 0.4rem;
                            border-radius: 50%;
                            overflow: hidden;
                            img {
                                width: 0.4rem;
                                height: 0.4rem;
                            }
                        }
                        .con {
                            font-size: 0.14rem;
                            float: right;
                            .name {
                                width: 5.7rem;
                                height: 0.15rem;
                                font-size: 0.12rem;
                                .username {
                                    color: #5799cc;
                                    float: left;
                                }
                                .time {
                                    float: right;
                                    color: #c3c3c3;
                                }
                            }
                            .content {
                                width: 5.7rem;
                                float: left;
                                padding-top: 0.02rem;
                                font-size: 0.14rem;
                                line-height: 0.22rem;
                                // color: gray;
                                color: #696969;
                                img {
                                    display: inline-block;
                                    width: 0.22rem;
                                    height: 0.22rem;
                                }
                                .yinyong {
                                    background-color: #fbfbfb;
                                    padding-top: 0.04rem 0.05rem 0 0.05rem;

                                    margin-bottom: 0.1rem;
                                    border-radius: 0.05rem;
                                    margin: 0 0.1rem;
                                    border: 1px solid #eeeeee;
                                    img {
                                        display: inline-block;
                                        width: 0.22rem;
                                        height: 0.22rem;
                                    }
                                    span {
                                        color: #5799cc;
                                        padding: 0.04rem 0.06rem;
                                        font-size: 0.14rem;
                                        height: 0.2rem;
                                        line-height: 0.2rem;
                                    }
                                }
                            }
                        }
                    } //清除浮动带来的影响
                    li:after {
                        display: block;
                        content: "";
                        height: 0;
                        clear: both;
                    }
                }
            }
        }
    }
}
/*内容结束*/
/*导航栏开始*/
.nav {
    width: 6.32rem;
    height: 0.36rem;
    line-height: 0.36rem;
    padding-left: 0.08rem;
    font-size: 0.14rem;
    margin-top: 0.2rem;
    background: #ebebeb;
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ebebeb));
    border-top: 1px solid #ebebeb;
    border-bottom: 1px solid #ccc;
    a {
        display: inline-block;
    }
}
/*导航栏结束*/
/*底部开始*/
.footerApp {
    margin-top: 0.25rem;
    .foot_top {
        height: 0.34rem;
        border-top: 1px solid #c4c4c4;
        border-bottom: 1px solid #c4c4c4;
        line-height: 0.34rem;
        background: #efefef;
        a {
            width: 30%;
            float: left;
            box-sizing: border-box;
            text-align: center;
            font-size: 14px;
            border-right: 1px solid #c4c4c4;
        }
        a:last-child {
            width: 40%;
            border: 0;
            text-align: center;
            img {
                width: 0.15rem;
                height: 0.15rem;
                display: inline-block;
                vertical-align: middle;
                margin-top: -5px;
                margin-right: -2px;
            }
        }
    }
    .footer {
        background: #efefef;
        text-align: center;
        font-size: 0.12rem;
        padding: 0.15rem 0;
        color: #666;
        a {
            display: inline-block;
        }
        a:nth-child(1) {
            color: red;
        }
        a:nth-child(2) {
            color: #000;
        }
    }
}
/*底部结束*/
/*App下载开始*/
.fixed-slow {
    width: 0.6rem;
    height: 0.67rem;
    position: fixed;
    right: 0px;
    bottom: 0.3rem;
    z-index: 1;
    a {
        width: 0.6rem;
        height: 0.67rem;
        background: url('../images/slow.png') no-repeat center/0.6rem 0.67rem;
        ;
    }
}
/*App下载结束*/