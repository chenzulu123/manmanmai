@import "csh-media.less";
// 初始化
@font-face {
    font-family: 'iconfont';
    src: url('../font/iconfont.eot');
    src: url('../font/iconfont.eot?#iefix') format('embedded-opentype'), url('../font/iconfont.woff') format('woff'), url('../font/iconfont.ttf') format('truetype'), url('../font/iconfont.svg#iconfont') format('svg');
}

.iconfont {
    font-family: "iconfont" !important;
    font-size: .16rem;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -webkit-text-stroke-width: 0.2px;
    -moz-osx-font-smoothing: grayscale;
}

* {
    margin: 0;
    padding: 0;
    /* 盒子模型的 怪异模式  */
    box-sizing: border-box;
}

body {
    color: #000;
}

a {
    text-decoration: none;
    color: inherit;
    display: block;
    /* 移动端 a标签 点击高亮 */
    -webkit-tap-highlight-color: transparent;
}

a:hover {
    color: #000;
    text-decoration: none;
}

ul {
    list-style: none;
}

img {
    width: 100%;
    /* 解决图片默认的3像素  */
    display: block;
}

input {
    display: block;
    width: 100%;
    height: 100%; // outline: none;
    border: none;
}

#coverModal {
    background: url('img/loading.gif')no-repeat center;
}


/* 清楚浮动 */

.clearfix::after {
    display: block;
    content: "";
    height: 0;
    clear: both;
}

// 点击加个类
.disabled {
    cursor: not-allowed;
    background-color: red;
}

// 头部
.mmb() {
    background-image: url('../images/icon_bar.png');
    /* 当作二倍图使用 缩写一倍 */
    background-size: 240px 132px;
}

.MMB_header {
    z-index: 2;
    background-color: #ff841d;
    height: .44rem;
    text-align: center;
    line-height: .44rem;
    color: #fff;
    font-weight: 700;
    position: fixed;
    font-size: .2rem;
    width: 100%;
    a {
        float: left;
        margin-left: .08rem;
    }
    a:hover {
        color: #fff;
    } // div {}
    img {
        position: absolute;
        right: .17rem;
        top: .05rem;
        width: .33rem;
        height: .33rem;
        display: inline-block;
    }
}

// 列表开始
.MMB_content{
           height: 4rem;
    .list {
        padding-top: .44rem;
 
        .listMenu {
            li {
                list-style: none;
                padding: .14rem .08rem;
                height: 1.28rem; // position: relative;
                a {
                    text-decoration: none;
                    color: inherit;
                    .pic {
                        float: left;
                        width: 1.1rem;
                        padding-right: .1rem;
                        img {
                            height: 1rem;
                            vertical-align: middle;
                        }
                    }
                    .info {
                        font-size: .14rem;
                        line-height: .24rem;
                        .title {
                            color: #333333;
                            word-break: break-all;
                            line-height: .25rem;
                            min-height: .57rem;
                            text-align: left;
                            font-weight: normal;
                            span {
                                color: #ff6c00;
                                display: inline;
                            }
                        }
                        .other {
                            margin-top: .08rem;
                            color: #a1a1a1;
                            font-size: .12rem;
                            .mall {
                                float: left;
                            }
                            .comment {
                                float: right; // text-align: center;
                                margin: 0 auto;
                            }
                        }
                    }
                }
            }
        }
    }
    .MMB_footer {
        // position: absolute; // bottom: 0;
        // width: 100%; // 翻页
        .MMB_bottom {
            font-size: .15rem;
            background-color: #f2f2f2;
            .box {
                padding: .2rem 0;
                position: relative;
                height: .74rem;
                border-bottom: 1px solid #ccc;
                input {
                    background: #e3e3e3;
                    width: .82rem;
                    height: 0.33rem;
                    border: 1px solid #CCCCCC;
                    outline: none;
                    border-radius: .08rem;
                }
                #btnUp {
                    float: left;
                    margin-left: .2rem;
                }
                #btnDown {
                    float: right;
                    margin-right: .2rem;
                }
                #se {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    width: 1rem;
                    height: 0.34rem; // padding-left: 0.1rem;
                    // font-size: 0.12rem;
                }
            }
            .nav {
                border-bottom: 1px solid #ccc;
                padding-left: .05rem;
                line-height: .36rem;
                background-color: #f7f7f7;
                a {
                    display: inline-block;
                    height: .36rem;
                }
            }
        } // 底部
        footer {
            ul {
                // position: fixed;
                width: 100%; // bottom: 0;
                font-size: .14rem;
                background: #efefef;
                height: .34rem;
                margin-bottom: 0;
                border-bottom: 1px solid #ccc;
                li {
                    text-align: center;
                    float: left;
                    width: 30%;
                    line-height: .34rem;
                    border-right: 1px solid #ccc;
                }
                li:last-child {
                    width: 40%;
                    border-right: none;
                    a {
                        color: #747474; //    font-size: .16rem;
                        font-weight: 900;
                        span {
                            font-size: .14rem;
                            color: #000;
                            font-weight: normal;
                            ;
                        }
                    }
                }
            }
            .down {
                background: #efefef;
                text-align: center;
                font-size: .12rem;
                padding: .15rem 0;
                color: #666;
                height: .6rem; // margin-bottom: .34rem;
                p {
                    margin: 0;
                    color: #000;
                    span:first-child {
                        color: #ff0000;
                    }
                    span:last-child {
                        color: #666;
                    }
                }
            }
        }
    }
}



// 页面等待效果
.loading {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    background: gray;
}

.loading .pic {
    /*要定位的元素自动居中，可以先设置四个方位的距离都为0，然后直接来一个margin：auto  */
    width: .5rem;
    height: .5rem;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
}

.loading .pic i {
    float: left;
    display: block;
    width: .06rem;
    height: .5rem;
    margin: 0 2px;
    background: #399;
    -webkit-transform: scaleY(0.4);
    -ms-transform: scaleY(0.4);
    transform: scaleY(0.4);
    /*设置i的高度进行变化，变化时间是1.2s间隔，循环播放*/
    -webkit-animation: load 1.2s infinite;
    animation: load 1.2s infinite;
}

@-webkit-keyframes load {
    0%,
    40%,
    100% {
        /*0%,40%,100%进行0.4的缩放  */
        -webkit-transform: scaleY(0.4);
        transform: scaleY(0.4);
    }
    /*20%进行100%的缩放  */
    20% {
        -webkit-transform: scaleY(1);
        transform: scaleY(1);
    }
}

@keyframes load {
    0%,
    40%,
    100% {
        /*0%,40%,100%进行0.4的缩放  */
        -webkit-transform: scaleY(0.4);
        transform: scaleY(0.4);
    }
    /*20%进行100%的缩放  */
    20% {
        -webkit-transform: scaleY(1);
        transform: scaleY(1);
    }
}


/*给单个的i标签设置延迟时间*/

.loading .pic i:nth-child(2) {
    -webkit-animation-delay: 0.1s;
    animation-delay: 0.1s;
}

.loading .pic i:nth-child(3) {
    -webkit-animation-delay: 0.2s;
    animation-delay: 0.2s;
}

.loading .pic i:nth-child(4) {
    -webkit-animation-delay: 0.3s;
    animation-delay: 0.3s;
}

.loading .pic i:nth-child(5) {
    -webkit-animation-delay: 0.4s;
    animation-delay: 0.4s;
}