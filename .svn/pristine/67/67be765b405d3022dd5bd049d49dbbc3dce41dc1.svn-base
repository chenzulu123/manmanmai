// 导入媒体查询的文件
@import './media.less';
@import './base.less';
// 页面等待效果
.loading {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    background: gray;
}

.loading .pic {
    /*要定位的元素自动居中，可以先设置四个方位的距离都为0，然后直接来一个margin：auto  */
    width: 50px;
    height: 50px;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
}

.loading .pic i {
    float: left;
    display: block;
    width: 6px;
    height: 50px;
    margin: 0 2px;
    background: #399;
    -webkit-transform: scaleY(0.4);
    -ms-transform: scaleY(0.4);
    transform: scaleY(0.4);
    /*设置i的高度进行变化，变化时间是1.2s间隔，循环播放*/
    -webkit-animation: load 1.2s infinite;
    animation: load 1.2s infinite;
}

@-webkit-keyframes load {
    0%,
    40%,
    100% {
        /*0%,40%,100%进行0.4的缩放  */
        -webkit-transform: scaleY(0.4);
        transform: scaleY(0.4);
    }
    /*20%进行100%的缩放  */
    20% {
        -webkit-transform: scaleY(1);
        transform: scaleY(1);
    }
}

@keyframes load {
    0%,
    40%,
    100% {
        /*0%,40%,100%进行0.4的缩放  */
        -webkit-transform: scaleY(0.4);
        transform: scaleY(0.4);
    }
    /*20%进行100%的缩放  */
    20% {
        -webkit-transform: scaleY(1);
        transform: scaleY(1);
    }
}

div,a,img {
    -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select:none;
}

/*给单个的i标签设置延迟时间*/

.loading .pic i:nth-child(2) {
    -webkit-animation-delay: 0.1s;
    animation-delay: 0.1s;
}

.loading .pic i:nth-child(3) {
    -webkit-animation-delay: 0.2s;
    animation-delay: 0.2s;
}

.loading .pic i:nth-child(4) {
    -webkit-animation-delay: 0.3s;
    animation-delay: 0.3s;
}

.loading .pic i:nth-child(5) {
    -webkit-animation-delay: 0.4s;
    animation-delay: 0.4s;
}

// 设置外边框的宽度
.view {
    // 设置盒子的宽度
    .header {
        width: 6.4rem;
        padding: 0.15rem 0.18rem 0.15rem 0.18rem;
        background-color: #ff841d;
        .logo {
            float: left;
            width: 3.26rem;
            height: 0.45rem;
        }
        .down_button {
                float: right; 
                width: 0.45rem;
                height: 0.45rem;
            }
    } //搜索框
    .search {
        padding: 0.15rem;
        background-color: #ffffff;
        >.searchBox {
            width: 5.1rem;
            border-radius: 0.25rem;
            box-sizing: border-box;
            padding-left: 0.25rem;
            height: 0.5rem;
            color: #757575;
            float: left;
            background-color: #f1f1f1;
            border: none;
            font-size: 0.2rem;
            outline: none;
        }
        >.search_btn {
            width: 0.9rem;
            height: 0.5rem;
            background-color: #ff841d;
            color: #ffffff;
            float: right;
            border-radius: 0.25rem;
            padding: 0 0.2rem 0 0.2rem;
            font-size: 0.2rem;
            outline: none; // 去除input的外边框线
        }
    } // 分割线
    .line {
        width: 100%;
        height: 0.05rem;
        background-color: #f1f1f1;
    } // 首页菜单栏
    .menu_bar {
        padding-bottom: 0.16rem;
        ul {
            list-style: none;
            li {
                margin-top: 0.16rem;
                display: block;
                text-align: center;
                height: 0.8rem;
                float: left;
                width: 1.6rem;
                a {
                    img {
                        margin: 0 auto;
                        width: 0.6rem;
                        height: 0.6rem;
                    }
                    span {
                        margin-top: 0.06rem;
                        display: block;
                        height: 0.2rem;
                        font-size: 0.14rem;
                        color: #767676;
                    }
                }
            }
            li:nth-child(n+9) {
                display: none;
            }
        }
    } // 超值折扣推荐和品牌排行
    .discount_recommend,
    .brand_among {
        background-color: #ff9000;
        height: 0.4rem;
        line-height: 0.4rem;
        padding-left: 0.1rem;
        vertical-align: middle;
        span {
            float: left;
            font-size: 0.2rem;
            color: #ffffff;
        }
        img {
            margin-top: 0.07rem;
            width: 0.26rem;
            height: 0.26rem;
            float: right;
            margin-right: 0.2rem;
            vertical-align: middle;
        }
    } // 超级折扣推荐内容
    .discount_content {
        //优惠信息列表
        .discountList {
            list-style: none;
            li {
                padding: 0.14rem 0.08rem;
                float: left;
                a {
                    width: 100%;
                    height: 100%;
                    img {
                        width: 1rem;
                        height: 1rem;
                        float: left;
                    }
                    .info {
                        margin-left: 0.24rem;
                        width: 5rem;
                        float: right;
                        font-size: 0.14rem;
                        .title {
                            width: 4rem;
                            height: 0.57rem;
                            color: #333333;
                            span {
                                color: #ff7612;
                            }
                        }
                        .other {
                            width: 100%;
                            height: 0.24rem;
                            font-size: 0.12rem;
                            color: #cfcfcf;
                            .mall {
                                display: block;
                                float: left;
                            }
                            .icon_number {
                                float: right;
                                margin-right: 0.4rem;
                                .iconfont {
                                    font-size: 0.16rem;
                                }
                            }
                        }
                    }
                }
            }
        } //更多优惠信息
        .more_info {
            height: 0.8rem;
            background-color: #f2f2f2; //更多优惠信息
            .more_discount {
                // height: 0.4rem;
                padding: 0.1rem 0.1rem 0 0.1rem;
                a {
                    display: block;
                    width: 6.2rem;
                    height: 0.4rem;
                    border-radius: 0.05rem;
                    text-align: center;
                    border: 1px solid #dddddd;
                    box-sizing: border-box;
                    background-color: #ffffff;
                    line-height: 0.4rem;
                    font-size: 0.14rem;
                    color: #767676;
                }
            }
        }
    }
    .footer {
        width: 100%;
        ul {
            margin-top: 0.15rem;
            list-style: none;
            margin-bottom: 0.2rem;
            li {
                float: left;
                width: 33.333%;
                border: 1px solid #c4c4c4;
                box-sizing: border-box;
                text-align: center;
                height: 0.4rem;
                a {
                    display: block;
                    width: 100%;
                    font-size: 0.14rem;
                    line-height: 0.4rem;
                    color: #767676;
                }
            }
            li:nth-child(1) {
                border-left: none;
                border-right: none;
            }
            li:nth-child(3) {
                border-left: none;
                border-right: none;
            }
        }
        p {
            text-align: center;
            font-size: 0.14rem;
            color: #9f9f9f;
            a {
                display: inline-block;
                color: #fd2929;
            }
        }
    }
}